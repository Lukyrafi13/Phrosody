<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Function.TurnEnd.QuizTurnEndInput">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="TURN END"
        android:textSize="50sp" />
    <TextView
        android:layout_below="@id/judul"
        android:textColor="@color/black"
        android:id="@+id/judul2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="INPUT"
        android:textSize="50sp" />

    <ImageButton
        android:id="@+id/gambar_sound"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/judul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/o_air" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gambar_sound">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/gambar_sound">

            <ImageButton
                android:id="@+id/JawabanTanya"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/judul"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/soaltanya" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/gambar_sound">

            <ImageButton

                android:id="@+id/JawabanDeklaratif"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/judul"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/soaldeklaratif" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>