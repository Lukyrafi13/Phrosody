<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".SubMenu">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Profiling Element  of Prosody In Speech Commuincation"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/indver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:layout_marginTop="30dp"
        android:text="Indonesian Version"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <Button
        android:id="@+id/btnForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginHorizontal="150dp"
        android:layout_marginBottom="40dp"
        android:padding="20dp"
        android:text="FORM"
        android:textSize="50sp" />

    <Button
        android:id="@+id/btnFunction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnForm"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="150dp"
        android:padding="20dp"
        android:text="FUNCTION"
        android:textSize="50sp" />

</RelativeLayout>