<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Function.TurnEnd.SubMenuTurnEndActivity">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Profiling Element  of Prosody In Speech Commuincation"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/indver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:layout_marginTop="20dp"
        android:text="Indonesian Version"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnTurnEndInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="348dp"
        android:padding="20dp"
        android:text="Turn End Input"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnTurnEndOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="220dp"
        android:padding="20dp"
        android:text="Turn End Output"
        android:textSize="30sp" />

</RelativeLayout>