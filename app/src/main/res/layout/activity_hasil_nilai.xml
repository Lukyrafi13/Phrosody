<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HasilNilaiActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Profiling Element  of Prosody In Speech Commuincation"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/indver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:layout_marginTop="20dp"
        android:text="Indonesian Version"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/indver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Nama"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtnama"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Dimas Didan"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtNilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Nilai"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Nilai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNilai"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="100"
        android:textColor="@color/black"
        android:textSize="30sp" />


</RelativeLayout>