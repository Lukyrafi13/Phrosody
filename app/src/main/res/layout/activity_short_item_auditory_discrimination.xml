<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:padding="20dp"
    tools:context=".Form.Auditory_Discrimination.Activity_Short_Item_Auditory_Discrimination">

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/erasbold_itc"
        android:text="Short Item"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/judul2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:fontFamily="@font/erasbold_itc"
        android:text="Auditory \nDiscrimination"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/soal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul2"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/erasbold_itc"
        android:gravity="center_horizontal"
        android:text="Soal"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/linearatas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soal"
        android:layout_marginTop="50dp">

        <ImageButton
            android:id="@+id/gambar_sound1"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_below="@id/judul"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_image_button"
            android:scaleType="centerCrop"
            android:src="@drawable/gambar_sound" />

        <ImageButton
            android:id="@+id/gambar_sound2"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_below="@id/judul"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="@drawable/rounded_image_button"
            android:scaleType="centerCrop"
            android:src="@drawable/gambar_sound" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearatas"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:scaleType="centerCrop"
                android:id="@+id/Jawaban2lingkaran"
                android:layout_width="220dp"
                android:layout_height="130dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_image_button"
                android:padding="35dp"
                android:src="@drawable/dua_lingkaran" />

            <ImageButton
                android:scaleType="centerCrop"
                android:id="@+id/Jawabanlingkarankotak"
                android:layout_width="220dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_image_button"
                android:padding="35dp"
                android:src="@drawable/lingkaran_kotak" />


        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/watermark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/erasbold_itc"
        android:text="@string/watermark"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>